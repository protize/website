---
import { Facebook, Github, Linkedin, X } from "lucide-react";
import FadeIn from "../components/animations/FadeIn";
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/shared/ContactForm";
---

<Layout title="Contact Us">
  <!-- Hero Section -->
  <section class="py-10 lg:py-20">
    <div class="container-custom">
      <FadeIn client:load direction="up">
        <h1
          class="text-4xl md:text-5xl text-center font-heading font-bold mb-6"
        >
          Get in <span class="gradient-text">Touch</span>
        </h1>

        <p class="text-xl text-center text-gray-600 max-w-3xl mx-auto">
          Ready to transform your business with innovative IT solutions? Let's
          start a conversation.
        </p>
      </FadeIn>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <FadeIn client:load direction="up">
          <div class="card">
            <h2
              class="text-2xl md:text-3xl font-heading font-bold mb-6 text-navy"
            >
              Send Us a Message
            </h2>

            <ContactForm client:load/>
          </div>
        </FadeIn>

        <!-- Contact Information -->
        <div class="space-y-8">
          <FadeIn client:load direction="up">
            <div
              class="bg-white rounded-tl-xl rounded-tr-xl border border-b-0 transition-all duration-300 p-6 bg-gradient-to-br from-primary to-accent text-white"
            >
              <h3 class="text-2xl font-heading font-bold mb-6">
                Contact Information
              </h3>

              <div class="space-y-[22px]">
                <div class="flex items-start space-x-4">
                  <div
                    class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Office Address</h4>
                    <p class="opacity-90">
                      123 Tech Street<br />Silicon Valley, CA 94025<br />United
                      States
                    </p>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div
                    class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Email</h4>
                    <a
                      href="mailto:hello@protize.com"
                      class="opacity-90 hover:opacity-100 transition-opacity"
                      >hello@protize.com</a
                    >
                    <br />
                    <a
                      href="mailto:support@protize.com"
                      class="opacity-90 hover:opacity-100 transition-opacity"
                      >support@protize.com</a
                    >
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div
                    class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Phone</h4>
                    <a
                      href="tel:+15551234567"
                      class="opacity-90 hover:opacity-100 transition-opacity"
                      >+1 (555) 123-4567</a
                    >
                    <br />
                    <span class="text-sm opacity-75">Mon-Fri, 9AM-6PM PST</span>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div
                    class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold mb-1">Business Hours</h4>
                    <p class="opacity-90">
                      Monday - Friday: 9:00 AM - 6:00 PM<br />Saturday: 10:00 AM
                      - 2:00 PM<br />Sunday: Closed
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </FadeIn>

          <FadeIn client:load direction="up">
            <div class="bg-white rounded-bl-xl rounded-br-xl border border-t-0 transition-all duration-300 p-6">
              <h3 class="text-2xl font-heading font-bold mb-4 text-navy">
                Follow Us
              </h3>
              <div class="flex space-x-4">
                {
                  [
                    { name: "LinkedIn", href: "#", icon: Linkedin },
                    { name: "Twitter", href: "#", icon: X },
                    { name: "GitHub", href: "#", icon: Github },
                    { name: "Facebook", href: "#", icon: Facebook },
                  ].map((social) => {
                    const Icon = social.icon;

                    return (
                      <a
                        href={social.href}
                        class="w-12 h-12 rounded-full bg-gray-100 hover:bg-primary hover:text-white flex items-center justify-center transition-all duration-300 hover:scale-110"
                        aria-label={social.name}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        <Icon className="w-5 h-5" />
                      </a>
                    );
                  })
                }
              </div>
            </div>
          </FadeIn>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="container-custom pb-10 lg:pb-16">
    <FadeIn client:load direction="up">
      <div class="map-wrap h-96 w-full overflow-hidden rounded-2xl">
        <iframe
          title="Protize Office Location"
          width="100%"
          height="100%"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="h-full w-full"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3888.0307191736307!2d77.640833!3d12.971891!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae1402f2f9c5cf%3A0x0000000000000000!2sIndiranagar%2C%20Bengaluru%2C%20Karnataka!5e0!3m2!1sen!2sin!4v1699999999999"
        ></iframe>
      </div>
    </FadeIn>
  </section>
</Layout>