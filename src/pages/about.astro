---
import Layout from "../layouts/Layout.astro";
import FadeIn from "../components/animations/FadeIn";
import CountUp from "../components/animations/CountUp";
import AboutHero from "../components/about/AboutHero.astro";
import AboutStory from "../components/about/AboutStory.astro";
import AboutMissVision from "../components/about/AboutMissVision.astro";
import AboutValue from "../components/about/AboutValue.astro";
import Timeline from "../components/about/Timeline.astro";
import CTASection from "../components/home/CTASection.astro";
import AboutCertification from "../components/about/AboutCertification.astro";
import AboutChoose from "../components/about/AboutChoose.astro";
import FaqService from "../components/services/FaqService.astro";
---

<Layout title="About Us">
  <!-- Hero Section -->
  <AboutHero />

  <!-- Our Story -->
  <AboutStory />

  <!-- Mission & Vision -->
  <AboutMissVision />

  <!-- Core Values -->
  <AboutValue />

  <!-- Company Timeline/Milestones -->
  <Timeline />

  <!-- Certifications & Partnerships -->
  <!-- <AboutCertification /> -->

  <!-- Why Choose Us -->
  <AboutChoose />

  <!-- Faq Section -->
  <FaqService
    title="Frequently Asked"
    highlight="Questions"
    items={[
      {
        q: "How do you typically work with clients?",
        a: "We start with a short discovery, align on scope and outcomes, then deliver in milestones with weekly updates, demos, and clear documentation.",
      },
      {
        q: "What industries do you work with?",
        a: "Weâ€™ve supported startups and growing businesses across fintech, ecommerce, education, real estate, and service-based platforms.",
      },
      {
        q: "Can you work with an existing product or codebase?",
        a: "Yes. We can take over development, improve performance, fix stability issues, add features, and help you scale safely without breaking existing flows.",
      },
      {
        q: "Do you offer long-term support and maintenance?",
        a: "Yes. After launch, we provide ongoing support, monitoring, improvements, and feature iterations based on your roadmap.",
      },
      {
        q: "How do you ensure quality and security?",
        a: "We follow code reviews, testing where needed, secure-by-default practices, and production-friendly release workflows to keep your product stable and safe.",
      },
    ]}
  />

  <!-- CTA Section -->
  <CTASection
    title="Get Started"
    subtitle="Let's discuss how we can help bring your project to life"
    actions={[
      {
        label: "Contact Us Today",
        href: "/contact-us",
        variant: "primary",
        icon: true,
      },
      {
        label: "Meet Our Team",
        href: "/team",
        variant: "secondary",
      },
    ]}
  />
</Layout>
