---
import Layout from "../layouts/Layout.astro";
import Container from "../components/shared/Container.astro";
import CtaButton from "../components/shared/CtaButton.astro";
import Button from "../components/shared/Button.astro";
import { Image } from "astro:assets";

import serviceImgHero from "../assets/images/services.jpg";
import DeliveryWorkflow from "../assets/images/design-to-delivery-workflow.jpg";

type Service = {
  title: string;
  blurb: string;
  image: string;
  points: string[];
};

const services: Service[] = [
  {
    title: "Custom Web Application Development",
    blurb:
      "We build fast, secure, and scalable web applications—from MVPs to enterprise platforms. Perfect for SaaS, fintech, ecommerce, and internal business tools.",
    image:
      "https://images.unsplash.com/photo-1559526324-593bc073d938?auto=format&fit=crop&w=800&q=80",
    points: [
      "High-performance web apps",
      "Secure login & roles",
      "Payments & dashboards",
    ],
  },
  {
    title: "Mobile App Development (Android & iOS)",
    blurb:
      "Modern mobile apps with clean UI, smooth performance, and production-ready releases. Ideal for startups and businesses that need reliable apps users love.",
    image:
      "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?auto=format&fit=crop&w=800&q=80",
    points: [
      "Android & iOS apps",
      "Fast & responsive UX",
      "Play/App Store publishing",
    ],
  },
  {
    title: "UI/UX Design & Branding",
    blurb:
      "User-focused design that improves trust and conversions. We create modern interfaces, design systems, and branding that looks premium and works across all devices.",
    image:
      "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=800&q=80",
    points: [
      "Product UI/UX design",
      "Landing pages that convert",
      "Accessible design",
    ],
  },
  {
    title: "Cloud Deployment & DevOps",
    blurb:
      "Reliable cloud infrastructure for speed and scalability. We handle hosting, deployments, monitoring, and cost optimization—so your product stays stable under load.",
    image:
      "https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=800&q=80",
    points: ["Cloud hosting setup", "CI/CD deployments", "Monitoring & alerts"],
  },
  {
    title: "Data, Reporting & Analytics",
    blurb:
      "Dashboards and reporting systems that turn your data into decisions. Track KPIs, exports, performance, and operations with clear insights.",
    image:
      "https://images.unsplash.com/photo-1559526324-593bc073d938?auto=format&fit=crop&w=800&q=80",
    points: ["KPI dashboards", "CSV/Excel reports", "Operational insights"],
  },
  {
    title: "Product & Technology Consulting",
    blurb:
      "Need clarity before building? We help with planning, feature scoping, architecture guidance, and technical audits—so you avoid costly mistakes and launch faster.",
    image:
      "https://images.unsplash.com/photo-1556761175-129418cb2dfe?auto=format&fit=crop&w=800&q=80",
    points: [
      "Roadmap & scope clarity",
      "Architecture review",
      "Cost & performance planning",
    ],
  },
];
---

<Layout title="Services • Protize">
  <main class="space-y-24 md:space-y-32 mb-24">
    <!-- Hero -->
    <section id="hero" class="relative isolate overflow-hidden">
      <Container className="py-10 md:pb-16">
        <div
          class="grid grid-cols-1 lg:grid-cols-2 items-center gap-10 md:gap-12"
        >
          <!-- Copy -->
          <div class="space-y-6 max-w-3xl">
            <span
              class="inline-flex w-max items-center rounded-full border border-neutral-200 bg-white px-3 py-1 text-xs font-medium tracking-wide text-neutral-700"
            >
              Protize • Software Development Company
            </span>

            <h1
              class="text-3xl md:text-5xl font-extrabold leading-tight text-neutral-900"
            >
              Custom Web, Mobile & Fintech Software Development Services
            </h1>

            <p class="text-base md:text-lg leading-relaxed text-neutral-700">
              Protize helps startups and growing businesses design, develop, and
              scale secure digital products. From MVP app development to
              enterprise-grade platforms, we deliver high-performance web
              applications, mobile apps, fintech systems, and cloud solutions
              built for reliability and growth.
            </p>

            <div class="flex flex-wrap gap-3">
              <a
                href="/contact-us"
                aria-label="Start a software development project with Protize"
              >
                <CtaButton>Start Your Project</CtaButton>
              </a>
              <a
                href="/case-studies"
                aria-label="View Protize software development case studies"
              >
                <Button variant="secondary">View Case Studies</Button>
              </a>
            </div>
          </div>

          <!-- Visual -->
          <div class="relative order-first lg:order-none">
            <div class="w-full overflow-hidden">
              <Image
                src={serviceImgHero}
                alt="Engineers collaborating on a modern software system"
                width={1280}
                height={800}
                loading="eager"
                class="h-full w-full object-cover"
              />
            </div>

            <!-- Subtle glow -->
            <div
              class="pointer-events-none absolute -inset-8 -z-10 blur-3xl opacity-40"
              style="background: radial-gradient(40% 40% at 70% 30%, rgba(99,102,241,.35), transparent 60%);"
              aria-hidden="true"
            >
            </div>
          </div>
        </div>
      </Container>

      <Container className="py-10 md:py-16">
        <div class="mb-10 md:mb-14 text-center">
          <h2 class="text-2xl md:text-4xl font-bold">What we do</h2>
          <p class="mt-3 text-sm md:text-base text-neutral-600">
            Opinionated tech, clean delivery, measurable value.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {
            services.map((s) => (
              <article class="group rounded-2xl border border-neutral-200 bg-white/60 backdrop-blur supports-[backdrop-filter]:bg-white/40 shadow-sm hover:shadow-lg transition overflow-hidden">
                <div class="aspect-[16/10] overflow-hidden">
                  <Image
                    src={s.image}
                    alt={s.title}
                    width={640}
                    height={400}
                    loading="lazy"
                    decoding="async"
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-[1.04]"
                  />
                </div>
                <div class="p-5 md:p-6 space-y-3">
                  <h3 class="text-xl font-semibold text-neutral-900">
                    {s.title}
                  </h3>
                  <p class="text-sm text-neutral-700 leading-relaxed">
                    {s.blurb}
                  </p>
                  <ul class="mt-3 flex flex-wrap gap-2">
                    {s.points.map((p) => (
                      <li class="text-xs px-2.5 py-1 rounded-full border border-neutral-200 text-neutral-700">
                        {p}
                      </li>
                    ))}
                  </ul>
                </div>
              </article>
            ))
          }
        </div>
      </Container>

      <Container className="py-10 md:py-16">
        <div
          class="grid lg:grid-cols-2 gap-10 items-center rounded-3xl border border-neutral-200 p-6 md:p-10 bg-white shadow-sm hover:shadow-md transition"
        >
          <!-- Left: Text -->
          <div class="space-y-5">
            <h2 class="text-2xl md:text-4xl font-bold text-neutral-900">
              A clear, outcomes-first process
            </h2>
            <p class="text-sm md:text-base text-neutral-700 leading-relaxed">
              We keep feedback loops short and progress visible—from discovery
              to launch. You’ll always know what’s shipped, what’s next, and
              why.
            </p>

            <ol class="grid sm:grid-cols-2 gap-3 text-sm">
              <li
                class="rounded-xl border border-neutral-200 p-4 hover:bg-neutral-50 transition"
              >
                <span class="font-semibold text-neutral-900">1. Discover</span>
                <p class="text-neutral-700">Goals, risks, and constraints.</p>
              </li>
              <li
                class="rounded-xl border border-neutral-200 p-4 hover:bg-neutral-50 transition"
              >
                <span class="font-semibold text-neutral-900">2. Design</span>
                <p class="text-neutral-700">
                  Flows, wireframes, design system.
                </p>
              </li>
              <li
                class="rounded-xl border border-neutral-200 p-4 hover:bg-neutral-50 transition"
              >
                <span class="font-semibold text-neutral-900">3. Build</span>
                <p class="text-neutral-700">Incremental sprints &amp; demos.</p>
              </li>
              <li
                class="rounded-xl border border-neutral-200 p-4 hover:bg-neutral-50 transition"
              >
                <span class="font-semibold text-neutral-900">4. Scale</span>
                <p class="text-neutral-700">Observability, cost, resilience.</p>
              </li>
            </ol>
          </div>

          <div
            class="aspect-[16/10] w-full overflow-hidden rounded-2xl shadow-sm ring-1 ring-black/5"
          >
            <Image
              src={DeliveryWorkflow}
              alt="Design to delivery workflow – Protize process"
              width={1280}
              height={800}
              loading="lazy"
              decoding="async"
              class="h-full w-full object-cover transition-transform duration-500 hover:scale-[1.03]"
            />
          </div>
        </div>
      </Container>

      <Container className="pt-10 md:pt-16">
        <div
          class="rounded-3xl bg-gradient-to-br from-orange-50 via-amber-100 to-orange-200 text-neutral-900
           p-8 md:p-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-6
           border border-orange-200/70 shadow-sm"
        >
          <div>
            <h2 class="text-2xl md:text-3xl font-bold">Build with Protize</h2>
            <p class="mt-2 text-neutral-700">
              Tell us your vision—let’s craft something users love.
            </p>
          </div>

          <a
            href="/contact-us"
            aria-label="Book a free consultation with Protize"
          >
            <CtaButton>Book a free consult →</CtaButton>
          </a>
        </div>
      </Container>
    </section>
  </main>
</Layout>
