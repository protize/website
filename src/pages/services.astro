---
import Layout from "../layouts/Layout.astro";
import ServicesHero from "../components/services/ServicesHero.astro";
import ServicesGrid from "../components/services/ServicesGrid.astro";
import CTASection from "../components/shared/CTASection.astro";
import FaqSection from "../components/shared/FaqSection.astro";
---

<Layout title="Services">
  <!-- Hero Section -->
  <ServicesHero />

  <!-- Services Grid -->
  <ServicesGrid />
  <!-- FAQ Section -->
  <FaqSection />

  <!-- CTA -->
  <CTASection
    title="Ready to Get Started?"
    subtitle="Let's discuss how we can help bring your project to life"
    actions={[
      {
        label: "Contact Us Today",
        href: "/contact-us",
        variant: "primary",
        icon: true,
      },
    ]}
  />
</Layout>
