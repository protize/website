---
import TeamGrid from "../components/sections/team-section/TeamGrid.astro";
import Button from "../components/shared/Button.astro";
import Container from "../components/shared/Container.astro";
import CtaButton from "../components/shared/CtaButton.astro";
import GradiantText from "../components/shared/GradiantText.astro";
import Layout from "../layouts/Layout.astro";
import { members } from "../utils/data";
import team from "../assets/images/team.jpg";
import { Image } from "astro:assets";
import teamGroup from "../assets/images/team-group.jpg";
---

<Layout title="Our Team">
  <!-- ===== HERO SECTION ===== -->
  <section
    class="relative overflow-hidden bg-gradient-to-b from-purple-50 to-white"
  >
    <Container className="py-10 lg:py-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- LEFT TEXT CONTENT -->
        <div class="space-y-6">
          <h1
            class="text-center md:text-left text-4xl sm:text-7xl font-extrabold text-gray-900 leading-tight"
          >
            Meet the <br /><GradiantText>Protize</GradiantText> Team
          </h1>
          <p
            class="text-center md:text-left text-lg text-gray-600 leading-relaxed w-full md:max-w-lg"
          >
            Weâ€™re a passionate group of designers, developers, and strategists
            who transform ideas into impactful digital experiences. At Protize,
            we believe innovation starts with collaboration.
          </p>

          <div class="flex flex-wrap gap-4 justify-center md:justify-start">
            <a href="/contact-us">
              <CtaButton>Join Our Team</CtaButton>
            </a>
            <a href="/about">
              <Button variant="secondary"> Learn More About Us </Button>
            </a>
          </div>
        </div>

        <!-- RIGHT IMAGE GALLERY -->
        <div class="relative grid grid-cols-2 gap-4">
          <div class="space-y-4">
            <img
              src="https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1170"
              alt="Protize team working"
              class="rounded-2xl shadow-md w-full object-cover h-56 sm:h-64"
            />
            <img
              src="https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1170"
              alt="Office environment"
              class="rounded-2xl shadow-md w-full object-cover h-40 sm:h-48"
            />
          </div>
          <div class="space-y-4 mt-8">
            <Image
              src={team}
              alt="Collaboration meeting"
              class="rounded-2xl shadow-md w-full object-cover h-40 sm:h-48"
            />

            <img
              src="https://images.unsplash.com/photo-1635185481431-661b09594e6c?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=627"
              alt="Creative session"
              class="rounded-2xl shadow-md w-full object-cover h-56 sm:h-64"
            />
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-t from-white/50 via-transparent to-transparent rounded-2xl pointer-events-none"
          >
          </div>
        </div>
      </div>
    </Container>
  </section>

  <section id="our-team" class="bg-white py-20 md:py-28">
    <Container>
      <div class="grid grid-cols-1 items-start gap-12 md:grid-cols-2 lg:gap-16">
        <div class="order-1">
          <figure class="overflow-hidden h-[600px]">
            <Image
              src={teamGroup}
              alt="Protize team collaboration"
              width="1600"
              height="600"
              class="block h-full w-full object-cover object-center"
              loading="lazy"
              decoding="async"
            />
          </figure>
        </div>
        <div class="order-2">
          <p
            class="text-xl font-extrabold tracking-tight text-purple-700 md:text-3xl"
          >
            OUR PEOPLE. OUR POWER
          </p>

          <h2
            class="mt-3 text-balance text-3xl font-semibold leading-tight text-gray-900 md:text-4xl"
          >
            Driving Ideas into Impact
          </h2>

          <div class="mt-10 space-y-8">
            <section>
              <h3 class="text-2xl font-semibold text-purple-900 md:text-3xl">
                A Culture of Creativity and Growth
              </h3>
              <p
                class="mt-3 text-base leading-7 text-gray-700 md:text-lg md:leading-8"
              >
                At Protize, innovation starts with our people. We believe in
                empowering every team member to think boldly, experiment freely,
                and grow continuously. Through mentorship, open communication,
                and collaborative development, we cultivate an environment where
                ideas become impactful solutions that transform businesses.
              </p>
            </section>

            <section>
              <h3 class="text-2xl font-semibold text-purple-900 md:text-3xl">
                Expertise That Powers Tomorrow
              </h3>
              <p
                class="mt-3 text-base leading-7 text-gray-700 md:text-lg md:leading-8"
              >
                Our talented professionals combine deep technical knowledge with
                a passion for excellence. From front-end development and backend
                architecture to cloud integration and DevOps automation, we
                build reliable digital ecosystems. Every project we deliver
                reflects our commitment to innovation, precision, and long-term
                value creation.
              </p>
            </section>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- ===== TEAM GRID SECTION ===== -->
  <TeamGrid
    title="Our Creative Team"
    subtitle="Our Team Members"
    description="We are a multidisciplinary crew crafting products and delightful experiences."
    members={members}
  />
</Layout>
