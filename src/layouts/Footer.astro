---
import { Image } from "astro:assets";
import { Facebook, Github, Linkedin, X } from "lucide-react";

const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: "About Us", href: "/about" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "Our Team", href: "/team" },
  { name: "Contact", href: "/contact-us" },
  { name: "Blog", href: "/blog" },
];

const services = [
  { name: "Web Development", href: "/services#web-development" },
  { name: "Mobile Apps", href: "/services#mobile-app-development" },
  { name: "Cloud Solutions", href: "/services#cloud-solutions" },
  { name: "UI/UX Design", href: "/services#ui-ux-design" },
  { name: "DevOps", href: "/services#devops-automation" },
  { name: "IT Consulting", href: "/services#it-consulting" },
];

const socialLinks = [
  { name: "LinkedIn", icon: "linkedin", href: "https://linkedin.com" },
  { name: "Twitter", icon: "twitter", href: "https://twitter.com" },
  { name: "GitHub", icon: "github", href: "https://github.com" },
  { name: "Facebook", icon: "facebook", href: "https://facebook.com" },
];
---

<footer class="bg-navy text-white">
  <div class="container-custom section-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 mb-12">
      <!-- About Column -->
      <div>
        <div class="flex items-center space-x-2 mb-6">
          <a href="/" class="flex items-center gap-3">
            <Image
              src="/protize-footer.png"
              alt="Protize Logo"
              width={200}
              height={100}
            />
          </a>
        </div>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Transforming businesses through innovative IT solutions and
          cutting-edge technology.
        </p>
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-white/10 hover:bg-primary flex items-center justify-center transition-all duration-300 hover:scale-110"
                aria-label={social.name}
              >
                <span class="text-sm">
                  {social.icon === "linkedin" ? (
                    <Linkedin />
                  ) : social.icon === "twitter" ? (
                    <X />
                  ) : social.icon === "github" ? (
                    <Github />
                  ) : (
                    <Facebook />
                  )}
                </span>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-heading font-semibold mb-6">Quick Links</h4>
        <ul class="space-y-3">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-300 hover:text-primary transition-colors duration-300 inline-block"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <!-- <div>
        <h4 class="text-lg font-heading font-semibold mb-6">Services</h4>
        <ul class="space-y-3">
          {
            services.map((service) => (
              <li>
                <a
                  href={service.href}
                  class="text-gray-300 hover:text-primary transition-colors duration-300 inline-block"
                >
                  {service.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div> -->

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-heading font-semibold mb-6">Contact Us</h4>
        <ul class="space-y-4 text-gray-300">
          <li class="flex items-start space-x-3">
            <svg
              class="w-5 h-5 mt-1 flex-shrink-0 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>123 Tech Street, Silicon Valley, CA 94025</span>
          </li>
          <li class="flex items-center space-x-3">
            <svg
              class="w-5 h-5 flex-shrink-0 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href="mailto:hello@protize.com"
              class="hover:text-primary transition-colors"
            >
              hello@protize.com
            </a>
          </li>
          <li class="flex items-center space-x-3">
            <svg
              class="w-5 h-5 flex-shrink-0 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a
              href="tel:+15551234567"
              class="hover:text-primary transition-colors"
            >
              +1 (555) 123-4567
            </a>
          </li>
        </ul>

        <!-- Newsletter -->
        <div class="mt-6">
          <h5 class="font-semibold mb-3">Newsletter</h5>
          <form class="flex">
            <input
              type="email"
              placeholder="Your email"
              class="flex-1 px-4 py-2 rounded-l-lg bg-white/10 border border-white/20 focus:outline-none focus:border-primary text-white placeholder-gray-400"
            />
            <button
              type="submit"
              class="px-4 py-2 bg-primary hover:bg-blue-700 rounded-r-lg transition-colors duration-300"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <p class="text-gray-400 text-sm">
          Â© {currentYear} Protize. All rights reserved.
        </p>
        <div class="flex space-x-6 text-sm">
          <a
            href="/privacy"
            class="text-gray-400 hover:text-primary transition-colors"
          >
            Privacy Policy
          </a>
          <a
            href="/terms"
            class="text-gray-400 hover:text-primary transition-colors"
          >
            Terms and Conditions
          </a>
          <a
            href="/cookies"
            class="text-gray-400 hover:text-primary transition-colors"
          >
            Cookie Policy
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Newsletter form handling
    const newsletterForm = document.querySelector("footer form");
    newsletterForm?.addEventListener("submit", (e) => {
      e.preventDefault();
      const email = (e.target as HTMLFormElement).querySelector("input")?.value;
      if (email) {
        alert("Thank you for subscribing! (This is a demo)");
        (e.target as HTMLFormElement).reset();
      }
    });
  </script>
</footer>
