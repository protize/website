---
import type { LucideIcon } from "lucide-react";

export interface Props {
  title: string;
  features: string[];
  icon: LucideIcon;
  iconClass?: string;
}

const {
  title,
  features,
  icon: Icon,
  iconClass = "bg-blue-50 text-blue-600 ring-blue-200",
} = Astro.props;
---

<article
  class="h-full rounded-2xl border border-blue-100 bg-white p-5 shadow-sm hover:shadow-md transition"
>
  <div class="flex items-start gap-3">
    <div
      class={`inline-flex h-10 w-10 items-center justify-center rounded-xl ring-1 ${iconClass}`}
    >
      <Icon className="h-5 w-5" strokeWidth={2.2} />
    </div>

    <div class="min-w-0">
      <h3 class="text-base font-semibold text-gray-900">{title}</h3>
    </div>
  </div>

  <ul class="mt-4 space-y-2">
    {
      features.map((item) => (
        <li class="text-sm text-gray-600 leading-relaxed">â€¢ {item}</li>
      ))
    }
  </ul>
</article>
