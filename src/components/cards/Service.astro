---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title: string;
  features: string[];
  icon: string;
}

const { title, features, icon } = Astro.props;
---

<div
  class="relative overflow-hidden rounded-3xl bg-white border border-gray-200 px-4 pt-6 pb-0 transition-shadow hover:shadow-md"
>
  <!-- Icon -->
  <div
    class="rounded-xl mx-auto p-3 w-max bg-purple-100 text-purple-700 ring-1 ring-purple-200/70"
  >
    <div
      class="[&>svg]:w-6 [&>svg]:h-6 [&>svg]:block [&>svg]:fill-current"
      set:html={icon}
    />
  </div>

  <!-- Content -->
  <div class="mt-5 space-y-4">
    <h2 class="text-lg md:text-xl text-center font-semibold text-gray-900">
      {title}
    </h2>

    <Paragraph>
      <ul class="mt-4 space-y-1">
        {
          features.map((feature) => (
            <li class="flex items-center">
              <span class="mr-3 inline-flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-purple-100 text-purple-700 text-sm leading-none ring-1 ring-purple-200/70">
                âœ“
              </span>
              <span class="text-gray-700 leading-tight">{feature}</span>
            </li>
          ))
        }
      </ul>
    </Paragraph>
  </div>
</div>
