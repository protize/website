---
import FadeIn from "../animations/FadeIn";
---

<section class="py-12 bg-white">
  <div class="container-custom">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <FadeIn client:load direction="up" delay={0.1}>
        <div
          class="text-center p-6 rounded-xl hover:bg-gray-50 transition-colors duration-300"
        >
          <div class="text-4xl font-bold gradient-text mb-2">22+</div>
          <p class="text-gray-600">Projects Completed</p>
        </div>
      </FadeIn>
      <FadeIn client:load direction="up" delay={0.2}>
        <div
          class="text-center p-6 rounded-xl hover:bg-gray-50 transition-colors duration-300"
        >
          <div class="text-4xl font-bold gradient-text mb-2">25+</div>
          <p class="text-gray-600">Happy Clients</p>
        </div>
      </FadeIn>
      <FadeIn client:load direction="up" delay={0.3}>
        <div
          class="text-center p-6 rounded-xl hover:bg-gray-50 transition-colors duration-300"
        >
          <div class="text-4xl font-bold gradient-text mb-2">98%</div>
          <p class="text-gray-600">Satisfaction Rate</p>
        </div>
      </FadeIn>
      <FadeIn client:load direction="up" delay={0.4}>
        <div
          class="text-center p-6 rounded-xl hover:bg-gray-50 transition-colors duration-300"
        >
          <div class="text-4xl font-bold gradient-text mb-2">30+</div>
          <p class="text-gray-600">Industries Served</p>
        </div>
      </FadeIn>
    </div>
  </div>
</section>
