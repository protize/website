---
import FadeIn from "../animations/FadeIn";
import ProjectCard from "../portfolio/ProjectCard.astro";
import { getCollection } from "astro:content";

const portfolioEntries = await getCollection("portfolio");

const projects = portfolioEntries
  .filter((entry) => entry.data.featured)
  .sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  )
  .map((entry) => ({
    id: entry.id,
    slug: entry.slug,
    ...entry.data,
  }));
---

<section class="section-padding bg-gray-light">
  <div class="container-custom">
    <FadeIn client:load direction="up">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          Featured <span class="gradient-text">Projects</span>
        </h2>
        <p class="text-xl text-gray-600">
          Explore some of our most impactful work and the results we've achieved
          for our clients
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 items-stretch">
        {
          projects.slice(0, 3).map((project) => (
            <div
              class="project-card h-full flex"
              data-category={project.category}
            >
              <ProjectCard project={project} />
            </div>
          ))
        }
      </div>

      <div class="text-center mt-12">
        <a href="/portfolio" class="btn-primary">
          View All Projects
          <svg
            class="inline-block w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </FadeIn>
  </div>
</section>
