---
import FadeIn from "../animations/FadeIn";

const features = [
  {
    title: "15+ Years of Excellence",
    description:
      "Proven track record in delivering cutting-edge IT solutions across industries",
  },
  {
    title: "Expert Team",
    description: "10+ certified professionals with diverse technical expertise",
  },
  {
    title: "Client-Centric Approach",
    description:
      "Your success is our priority. We listen, adapt, and deliver results",
  },
  {
    title: "Cutting-Edge Technology",
    description:
      "We leverage the latest technologies to keep you ahead of the competition",
  },
  {
    title: "24/7 Support",
    description: "Round-the-clock support to ensure your systems run smoothly",
  },
  {
    title: "Proven Results",
    description:
      "98% client satisfaction rate with measurable ROI on every project",
  },
];

const certifications = [
  "ISO 9001:2015",
  "AWS Partner",
  "Microsoft Gold Partner",
  "Google Cloud Partner",
];
---

<section class="section-padding bg-white">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto text-center">
      <FadeIn client:load direction="up">
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          Why Choose <span class="gradient-text">Protize</span>
        </h2>
      </FadeIn>

      <FadeIn client:load direction="up" delay={0.1}>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          We combine technical expertise with business acumen to deliver
          solutions that drive real results. Here's what sets us apart:
        </p>
      </FadeIn>
    </div>
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Image/Illustration -->
      <FadeIn client:load direction="left">
        <div class="relative">
          <div class="relative z-10 rounded-2xl overflow-hidden">
            <img
              src="/images/services-section.png"
              alt="Why Choose Protize"
              class="w-full h-auto"
              loading="lazy"
            />
            <!-- Overlay with stats -->
            <!-- <div
              class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-navy/90 to-transparent p-8"
            >
              <div class="grid grid-cols-2 gap-4 text-white">
                <div>
                  <div class="text-3xl font-bold">98%</div>
                  <div class="text-sm">Client Satisfaction</div>
                </div>
                <div>
                  <div class="text-3xl font-bold">28+</div>
                  <div class="text-sm">Projects Delivered</div>
                </div>
              </div>
            </div> -->
          </div>

          <!-- Decorative Element -->
          <div
            class="absolute -bottom-6 -right-6 w-32 h-32 bg-primary/20 rounded-full blur-3xl -z-10"
          >
          </div>
        </div>
      </FadeIn>

      <!-- Right: Content -->

      <div class="space-y-0 mb-0">
        {
          features.map((feature, index) => (
            <FadeIn client:load direction="up" delay={0.1 * (index + 2)}>
              <div class="flex items-start space-x-4 py-1.5 rounded-lg hover:bg-gray-light transition-colors group">
                <div class="flex-shrink-0 w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                  <svg
                    class="w-4 h-4 text-primary"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-lg mb-1 text-navy">
                    {feature.title}
                  </h4>
                  <p class="text-gray-600">{feature.description}</p>
                </div>
              </div>
            </FadeIn>
          ))
        }
      </div>
    </div>
  </div>
</section>
