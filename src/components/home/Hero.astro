---
import { Image } from "astro:assets";
import FadeIn from "../animations/FadeIn";
---

<section
  class="relative py-10 lg:py-20 flex items-center justify-center overflow-hidden"
>
  <div class="container-custom relative z-10">
    <FadeIn client:load direction="up">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-center md:text-left">
          <h1
            class="text-4xl md:text-[54px] font-heading font-bold mb-6 leading-tight"
          >
            Trusted Engineering. Launch Fast. Build Smart.
            <span class="gradient-text mt-2"> Scale Fast.</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl">
            We deliver cutting-edge IT solutions that drive business growth.
            From web development to cloud infrastructure, we're your partner in
            digital transformation.
          </p>

          <div
            class="flex flex-wrap items-start justify-center md:justify-start gap-4"
          >
            <a
              href="/contact-us"
              class="btn-primary inline-flex w-auto shrink-0"
            >
              Start Your Project
              <svg
                class="inline-block w-6 h-6 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>

            <a
              href="/portfolio"
              class="btn-secondary inline-flex w-auto shrink-0"
            >
              View Portfolio
            </a>
          </div>
        </div>

        <!-- Right Illustration -->
        <div class="relative">
          <Image
            src="/images/img.avif"
            alt="Hero image"
            width={2350}
            height={2359}
            class="hero-image w-full h-auto object-cover"
            loading="eager"
          />
        </div>
      </div>
    </FadeIn>
  </div>
</section>
