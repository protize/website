---
import FadeIn from "../animations/FadeIn";
import testimonials from "../../data/testimonials.json";

const displayTestimonials = testimonials.slice(0, 6);
---

<section class="section-padding bg-gradient-to-br from-primary/5 to-accent/5">
  <div class="container-custom">
    <FadeIn client:load direction="up">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          What Our <span class="gradient-text">Clients Say</span>
        </h2>
        <p class="text-xl text-gray-600">
          Don't just take our word for it - hear from the businesses we've
          helped transform
        </p>
      </div>
    </FadeIn>

    <div id="testimonials-carousel" class="relative">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          displayTestimonials.map((testimonial, index) => (
            <FadeIn client:load direction="up" delay={index * 0.1}>
              <div class="card bg-white h-full flex flex-col">
                {/* Stars */}
                <div class="flex mb-4">
                  {Array.from({ length: testimonial.rating }).map(() => (
                    <svg
                      class="w-5 h-5 text-yellow-400"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>

                {/* Quote */}
                <blockquote class="text-gray-700 mb-6 leading-relaxed flex-grow italic">
                  "{testimonial.quote}"
                </blockquote>

                {/* Client Info */}
                <div class="flex items-center pt-6 border-t border-gray-200">
                  <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold mr-4 flex-shrink-0">
                    {testimonial.image ? (
                      <img
                        src={testimonial.image}
                        alt={testimonial.name}
                        class="w-12 h-12 rounded-full object-cover"
                        loading="lazy"
                        decoding="async"
                      />
                    ) : (
                      <span>
                        {testimonial.name
                          .split(" ")
                          .filter(Boolean)
                          .map((n) => n[0]?.toUpperCase())
                          .join("")}
                      </span>
                    )}
                  </div>

                  <div>
                    <div class="font-semibold text-navy">
                      {testimonial.name}
                    </div>
                    <div class="text-sm text-gray-600">
                      {testimonial.position}
                    </div>
                    <div class="text-sm text-primary font-medium">
                      {testimonial.company}
                    </div>
                  </div>
                </div>
              </div>
            </FadeIn>
          ))
        }
      </div>
    </div>
  </div>
</section>
