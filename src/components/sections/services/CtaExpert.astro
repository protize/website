---
import CtaButton from "../../shared/CtaButton.astro";

/**
 * HeroCtaExpert.astro
 * Background image file: /public/images/hero-bg2.png
 * Person image file (cutout): /public/images/hero-girl.png
 */
---

<section
  class="hero2 relative isolate overflow-hidden"
  style="background-image:url('/images/hero-bg2.png');"
>
  <!-- subtle star/noise + blue wash -->
  <div class="pointer-events-none absolute inset-0 hero2-overlay"></div>

  <div class="mx-auto max-w-[1380px] px-4 md:px-8 lg:px-12">
    <div class="relative min-h-[430px] md:min-h-[460px] flex items-center">
      <!-- LEFT CONTENT -->
      <div class="relative z-20 w-full max-w-[760px] py-14 md:py-16">
        <h2
          class="hero2-title text-white font-extrabold leading-[1.08] tracking-[-0.02em] text-[42px] md:text-5xl"
        >
          Transform Your IT Today-
          <br />
          Speak with Our Experts!
        </h2>

        <p
          class="hero2-desc mt-5 text-white/95 leading-[1.38] font-medium text-[22px] md:text-xl max-w-2xl"
        >
          Ready to take your business to the next level with cutting-edge IT
          solutions? Our team is here to help you transform.
        </p>

        <!-- Subscribe form -->
        <form
          class="hero2-form mt-8 flex items-center gap-3 bg-white rounded-xl p-2 w-full max-w-xl shadow-[0_18px_60px_-30px_rgba(0,0,0,0.35)]"
          onsubmit="event.preventDefault()"
        >
          <label for="hero2-email" class="sr-only">Email Address</label>
          <input
            id="hero2-email"
            type="email"
            placeholder="Email Address"
            class="h-10 w-full rounded-lg px-2 text-base font-medium text-slate-900 placeholder:text-slate-500/95 outline-none border-0 focus:ring-0"
          />

          <CtaButton> Subscribe â†—</CtaButton>
        </form>
      </div>

      <!-- RIGHT PERSON -->
      <div
        class="hero2-person pointer-events-none absolute bottom-0 right-0 z-20"
      >
        <img
          src="/images/25046534_7012001.png"
          alt="IT expert"
          class="block h-auto w-[330px] md:w-[430px] lg:w-[520px] object-contain"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero2 {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero2-overlay {
    background:
      radial-gradient(
        45% 75% at 8% 62%,
        rgba(98, 127, 255, 0.42),
        transparent 70%
      ),
      radial-gradient(
        36% 58% at 92% 58%,
        rgba(140, 170, 255, 0.25),
        transparent 72%
      ),
      linear-gradient(
        95deg,
        rgba(35, 17, 156, 0.76) 0%,
        rgba(44, 27, 186, 0.46) 45%,
        rgba(61, 47, 214, 0.3) 100%
      );
  }

  /* tiny moving stars look */
  .hero2::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      rgba(255, 255, 255, 0.42) 1px,
      transparent 1px
    );
    background-size: 3px 3px;
    opacity: 0.22;
    animation: starsDrift 24s linear infinite;
    z-index: 1;
    pointer-events: none;
  }

  .hero2-title,
  .hero2-desc,
  .hero2-form,
  .hero2-person,
  .hero2-chips .chip {
    opacity: 0;
    transform: translateY(16px);
    animation: fadeUp 0.75s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  .hero2-title {
    animation-delay: 0.08s;
  }
  .hero2-desc {
    animation-delay: 0.18s;
  }
  .hero2-form {
    animation-delay: 0.3s;
  }

  .hero2-person {
    transform: translateY(18px) scale(0.98);
    animation: personIn 0.95s cubic-bezier(0.22, 1, 0.36, 1) 0.24s forwards;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #fff;
    color: #1d2760;
    border-radius: 12px;
    padding: 12px 18px;
    font-size: 18px;
    font-weight: 700;
    line-height: 1;
    box-shadow: 0 10px 28px -16px rgba(7, 14, 50, 0.55);
  }

  .hero2-chips .chip-1 {
    animation-delay: 0.42s;
  }
  .hero2-chips .chip-2 {
    animation-delay: 0.52s;
  }
  .hero2-chips .chip-3 {
    animation-delay: 0.62s;
  }

  .chip-dot {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 21px;
    height: 21px;
    border-radius: 999px;
    background: #5333de;
    color: white;
    font-size: 12px;
    font-weight: 900;
    transform: translateY(-0.5px);
  }

  .hero2-btn {
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease,
      filter 0.25s ease;
    box-shadow: 0 10px 24px -14px rgba(51, 28, 176, 0.95);
  }

  .hero2-btn:hover {
    transform: translateY(-1px);
    filter: brightness(1.06);
    box-shadow: 0 16px 34px -16px rgba(51, 28, 176, 0.95);
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes personIn {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes starsDrift {
    from {
      transform: translate3d(0, 0, 0);
    }
    to {
      transform: translate3d(-28px, 0, 0);
    }
  }

  /* mobile adjustments */
  @media (max-width: 1024px) {
    .hero2-title {
      font-size: 36px;
    }
    .hero2-desc {
      font-size: 20px;
    }
    .hero2-btn {
      font-size: 22px;
    }
    .hero2-person img {
      width: 370px;
    }
  }

  @media (max-width: 767px) {
    .hero2 {
      border-radius: 14px;
    }

    .hero2-title {
      font-size: 30px;
      line-height: 1.12;
    }

    .hero2-desc {
      font-size: 17px;
      max-width: 100%;
    }

    .hero2-form {
      padding: 10px;
      gap: 8px;
    }

    .hero2-form input {
      height: 50px;
      font-size: 18px;
      padding-left: 14px;
    }

    .hero2-btn {
      height: 50px;
      font-size: 18px;
      padding-inline: 14px;
    }

    .hero2-person {
      opacity: 0.2 !important;
      right: -50px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero2::before,
    .hero2-title,
    .hero2-desc,
    .hero2-form,
    .hero2-person,
    .hero2-chips .chip {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }
  }
</style>
