---
import type { CollectionEntry } from "astro:content";

type Props = {
  posts: CollectionEntry<"case-studies">[];
};

const { posts = [] } = Astro.props as Props;

const formatDate = (d: Date) =>
  new Date(d).toLocaleDateString("en-IN", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
---

<div
  class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3"
  role="list"
  aria-label="Case study projects"
>
  {
    posts.map((post) => {
      const {
        title,
        excerpt,
        pubDate,
        coverImage,
        coverAlt,
        tags = [],
        author,
      } = post.data;

      const href = `/case-studies/${post.slug}`;
      // Store lowercase tags in the attribute for case-insensitive filtering
      const tagsAttr = tags
        .map((t) => String(t).trim().toLowerCase())
        .filter(Boolean)
        .join(",");
      return (
        <article
          role="listitem"
          class="group relative overflow-hidden rounded-2xl border border-neutral-200 bg-white shadow-sm transition hover:shadow-md"
          data-tags={tagsAttr}
        >
          <a href={href} aria-label={`Read case study: ${title}`}>
            <div class="aspect-[16/9] w-full overflow-hidden bg-neutral-100">
              {coverImage ? (
                <img
                  src={coverImage}
                  alt={coverAlt ?? title}
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.03]"
                  loading="lazy"
                  decoding="async"
                />
              ) : (
                <div class="flex h-full w-full items-center justify-center text-neutral-400">
                  <span class="text-sm">No cover image</span>
                </div>
              )}
            </div>

            <div class="p-5">
              <h3 class="line-clamp-2 text-lg font-semibold leading-snug">
                {title}
              </h3>

              {excerpt && (
                <p class="mt-2 line-clamp-3 text-sm text-neutral-600">
                  {excerpt}
                </p>
              )}

              <div class="mt-4 flex items-center justify-between text-sm text-neutral-500">
                <span>{formatDate(pubDate)}</span>
                <span class="truncate max-w-[50%] text-right">{author}</span>
              </div>

              {tags.length > 0 && (
                <div class="mt-4 flex flex-wrap gap-2">
                  {tags.map((t) => (
                    <span class="inline-flex items-center rounded-full border border-neutral-200 px-2.5 py-1 text-xs text-neutral-700">
                      {t}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      );
    })
  }
</div>

<!-- Client-side filter handler -->
<script type="module">
  const container = document.getElementById("grid");
  if (container) {
    const cards = Array.from(container.querySelectorAll("[data-tags]"));

    function applyFilter(tag) {
      const needle = (tag || "*").toLowerCase();
      cards.forEach((el) => {
        const tags = (el.getAttribute("data-tags") || "")
          .split(",")
          .map((s) => s.trim())
          .filter(Boolean);
        const show = needle === "*" || tags.includes(needle);
        el.classList.toggle("hidden", !show);
      });
    }

    // react to page-level events
    container.addEventListener("protize:filter-change", (e) => {
      const tag = e?.detail?.tag || "*";
      applyFilter(tag);
    });

    // initialize from ?tag= (in case user loads directly)
    const initialTag = (
      new URL(window.location.href).searchParams.get("tag") || "*"
    ).toLowerCase();
    applyFilter(initialTag);
  }
</script>
