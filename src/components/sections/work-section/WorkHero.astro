---
import Container from "../../shared/Container.astro";
import Paragraph from "../../shared/Paragraph.astro";
import GradiantText from "../../shared/GradiantText.astro";
import CtaButton from "../../shared/CtaButton.astro";
import { Image } from "astro:assets";

import workHero from "../../../assets/images/gradient-technology-symbols-background.jpg";

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section
  id="work-hero"
  class={`relative h-[90vh] overflow-hidden flex items-center justify-center ${className}`}
>
  <div class="absolute inset-0">
    <Image
      src={workHero}
      alt="Protize project background"
      aria-hidden="true"
      width={1920}
      height={1080}
      class="h-full w-full object-cover object-center"
    />
    <div class="absolute inset-0 bg-black/70"></div>
  </div>

  <Container className="relative z-10 text-center text-white px-4">
    <div class="mx-auto max-w-3xl space-y-6">
      <span
        class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 backdrop-blur px-3 py-1 text-xs font-medium"
      >
        Case Studies & Projects
      </span>

      <h1
        class="text-5xl/tight sm:text-6xl/tight xl:text-7xl/tight
             font-bold text-heading-1"
      >
        <GradiantText>Our Work</GradiantText>
      </h1>

      <p class="text-base md:text-lg font-semibold text-white">
        Projects that define Protize.
      </p>

      <Paragraph className="text-white/90">
        A glimpse of the products and systems we’ve built for our clients —
        architecture-first builds, measurable KPIs, and calm, repeatable
        launches.
      </Paragraph>

      <div class="flex flex-wrap items-center justify-center gap-3 pt-2">
        <CtaButton>View Case Studies</CtaButton>
        <a
          href="/contact"
          class="inline-flex items-center justify-center rounded-xl border border-white/30 bg-white/10 px-4 py-2 text-sm font-medium text-white hover:bg-white/15 transition backdrop-blur"
        >
          Talk to the Team
        </a>
      </div>

      <div class="flex flex-wrap items-center justify-center gap-2 pt-6">
        {
          [
            { k: "99.9%+", v: "uptime targets" },
            { k: "2–8 wks", v: "MVP launch windows" },
            { k: "p95↓", v: "latency budgets" },
          ].map((s) => (
            <span class="inline-flex items-center rounded-full border border-white/20 bg-white/10 px-3 py-1 text-xs font-medium text-white/90 backdrop-blur">
              <strong class="mr-1 text-white">{s.k}</strong> {s.v}
            </span>
          ))
        }
      </div>
    </div>
  </Container>
</section>
