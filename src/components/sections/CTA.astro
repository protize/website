---
import Container from "../shared/Container.astro";
import CtaButton from "../shared/CtaButton.astro";
import GradiantText from "../shared/GradiantText.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section id="cta" class={`relative ${className}`}>
  <Container>
    <div
      class="relative w-full overflow-hidden rounded-2xl bg-gradient-to-br from-orange-50 to-amber-100 py-12 md:py-16 px-6 md:px-10 shadow-lg text-center"
    >
      <div class="mx-auto max-w-2xl space-y-6 animate-fadeIn">
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-extrabold leading-tight text-gray-900"
        >
          Ready to
          <GradiantText>Build</GradiantText> Something Exceptional with <GradiantText
            >Protize?</GradiantText
          >
        </h1>

        <Paragraph className="text-base md:text-lg text-gray-700 font-medium">
          Accelerate your product journey with architecture-first execution,
          reliable delivery, and measurable results.
        </Paragraph>

        <div class="pt-6">
          <CtaButton>Start Your Project</CtaButton>
        </div>
      </div>

      <div
        class="absolute -bottom-10 -right-10 h-40 w-40 bg-orange-200/50 rounded-full blur-2xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="absolute -top-10 -left-10 h-32 w-32 bg-yellow-100/60 rounded-full blur-2xl"
        aria-hidden="true"
      >
      </div>
    </div>
  </Container>
</section>
