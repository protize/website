---
/* TechStack.astro */
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

const { className } = Astro.props;

type Tool = {
  name: string;
  icon: string;
};

const tools: Tool[] = [
  {
    name: "NestJS",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><circle cx="24" cy="24" r="22" fill="#E0234E"/><path d="M24 12l8 6-3 10h-10l-3-10 8-6z" fill="white" opacity=".9"/></svg>`,
  },
  {
    name: "Next.js",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="black"/><path d="M15 33V15h3.5v18H15zm7.5 0V15h3.5l7 11v-11H37v18h-3.2l-7.3-11.4V33H22.5z" fill="white"/></svg>`,
  },
  {
    name: "Astro",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#1B1B1D"/><path d="M24 10l9 22h-6l-3-8-3 8h-6l9-22z" fill="white"/><circle cx="32" cy="31" r="3" fill="#FF5D01" opacity=".9"/></svg>`,
  },
  {
    name: "PostgreSQL",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#336791"/><path d="M24 14c-6 0-10 3-10 8s4 8 10 8 10-3 10-8-4-8-10-8zm0 4c3.3 0 6 1.8 6 4s-2.7 4-6 4-6-1.8-6-4 2.7-4 6-4z" fill="white"/></svg>`,
  },
  {
    name: "BullMQ",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#C62828"/><path d="M12 30h24v4H12zM12 22h24v4H12zM12 14h24v4H12z" fill="white"/></svg>`,
  },
  {
    name: "Redis",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#D82C20"/><path d="M14 18l10-4 10 4-10 4-10-4zm0 6l10-4 10 4-10 4-10-4zm0 6l10-4 10 4-10 4-10-4z" fill="white"/></svg>`,
  },
  {
    name: "AWS",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#232F3E"/><path d="M12 30c6 6 18 6 24 0" stroke="#FF9900" stroke-width="3" fill="none" stroke-linecap="round"/><path d="M14 20h20" stroke="white" stroke-width="3" stroke-linecap="round"/></svg>`,
  },
  {
    name: "Docker",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#2496ED"/><path d="M16 26h4v4h-4zM21 26h4v4h-4zM26 26h4v4h-4zM16 21h4v4h-4zM21 21h4v4h-4zM26 21h4v4h-4zM31 26h5c0 5-4 7-10 7-5 0-9-2-10-6l15 1z" fill="white"/></svg>`,
  },
  {
    name: "pnpm",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#F69220"/><path d="M14 14h8v8h-8zM26 14h8v8h-8zM14 26h8v8h-8zM26 26h8v8h-8z" fill="white"/></svg>`,
  },
  {
    name: "Tremor",
    icon: `<svg viewBox="0 0 48 48" class="h-7 w-7" aria-hidden="true"><rect width="48" height="48" rx="10" fill="#0E131B"/><path d="M10 30c6-8 12 8 18 0 4-6 6-6 10 0" stroke="#7DD3FC" stroke-width="3" fill="none" stroke-linecap="round"/></svg>`,
  },
];
---

<section id="tech-stack" class={`relative ${className}`}>
  <Container className="space-y-8 md:space-y-10">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto space-y-2">
      <Title>Tech Stack &amp; Tools</Title>
      <p class="text-sm md:text-base text-gray-600">
        Our preferred toolchain for fast, reliable, and scalable product
        engineering.
      </p>
    </div>

    <div class="mx-auto max-w-4xl">
      <ul class="mt-2 flex flex-wrap items-center justify-center gap-2">
        {
          ["performance budgets", "CI/CD", "observability"].map((note) => (
            <li class="inline-flex items-center rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-xs font-medium text-gray-700">
              {note}
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Tools Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4 sm:gap-5">
      {
        tools.map((t) => (
          <div class="group rounded-2xl border border-gray-200 bg-orange-50 p-4 flex items-center gap-3 transition duration-200 ease-in-out transform hover:-translate-y-1 hover:bg-orange-100">
            <div class="flex h-11 w-11 shrink-0 items-center justify-center rounded-xl bg-gray-100">
              <span class="sr-only">{t.name} icon</span>
              <div set:html={t.icon} />
            </div>
            <div class="min-w-0">
              <span class="block text-sm font-medium text-gray-900 truncate">
                {t.name}
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</section>
