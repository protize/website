---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

import spotify from "../../assets/logos/spotify.png";
import slack from "../../assets/logos/slack.png";
import paypallogo from "../../assets/logos/paypallogo.png";

const brands = [
  { id: 1, name: "Spotify", logo: spotify },
  { id: 2, name: "Slack", logo: slack },
  { id: 3, name: "PayPal", logo: paypallogo },
  { id: 4, name: "Spotify", logo: spotify },
  { id: 5, name: "Slack", logo: slack },
  { id: 6, name: "PayPal", logo: paypallogo },
];

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section id="brands" class={`relative ${className}`}>
  <Container className="space-y-10 md:space-y-14">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto space-y-3">
      <Title>Trusted by leading brands in the industry</Title>
      <p class="text-sm md:text-base text-gray-600">
        Our partnerships span startups to global enterprisesâ€”powered by trust,
        performance, and delivery excellence.
      </p>
    </div>

    <!-- Brand Logos -->
    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 sm:gap-6 justify-items-center items-center"
    >
      {
        brands.map((brand) => (
          <div
            class="flex h-20 w-32 sm:w-36 md:w-40 items-center justify-center rounded-xl border border-gray-200 bg-white shadow-sm hover:shadow-md transition duration-300 ease-out group"
            title={brand.name}
          >
            <Image
              src={brand.logo}
              width={100}
              height={60}
              alt={brand.name}
              class="h-7 sm:h-10 w-auto object-contain transition duration-300 ease-linear grayscale group-hover:grayscale-0 group-hover:scale-105"
            />
          </div>
        ))
      }
    </div>
  </Container>
</section>
