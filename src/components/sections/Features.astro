---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features: FeatureProps[] = [
  {
    title: "Architecture-First Delivery",
    description:
      "Design docs, ADRs, and performance budgets up front—so change stays cheap and delivery stays predictable.",
  },
  {
    title: "Modern Web & App Engineering",
    description:
      "Next.js/Astro frontends, NestJS APIs, TypeScript everywhere. Clean modules, clear boundaries, fast UIs.",
  },
  {
    title: "Payments & Fintech Expertise",
    description:
      "Payins, payouts, settlements, chargebacks, and merchant dashboards—built with compliance guardrails.",
  },
  {
    title: "Data & Analytics Pipelines",
    description:
      "PostgreSQL time-series, ETL with BullMQ/Python, exports to CSV/Excel, and actionable KPI dashboards.",
  },
  {
    title: "Cloud & DevOps at Scale",
    description:
      "AWS, Docker, pnpm/Nx monorepos, and GitHub Actions CI/CD—secure, reproducible, and cost-aware.",
  },
  {
    title: "SRE Mindset",
    description:
      "SLIs/SLOs, error budgets, on-call playbooks, and sensible alerts. Reliability designed in, not bolted on.",
  },
  {
    title: "Security by Default",
    description:
      "Least-privilege IAM, secret hygiene, audit trails, rate limits, and disaster recovery from day one.",
  },
  {
    title: "Observability that Matters",
    description:
      "Traces, logs, and metrics tied to business KPIs—so issues are found early and fixed quickly.",
  },
  {
    title: "Performance Budgets",
    description:
      "Guardrails for latency, throughput, and cost—kept green through CI checks and regression gates.",
  },
  {
    title: "0-to-Launch Playbooks",
    description:
      "Environment templates, staging parity, cutover plans, and rollback switches for calm releases.",
  },
  {
    title: "Automation & Workflows",
    description:
      "Bots, webhooks, and RPA-style tasks to remove manual toil across ops, support, and reporting.",
  },
  {
    title: "Support & Stewardship",
    description:
      "SLA-backed maintenance, dependency hygiene, and continuous tuning to keep systems healthy.",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-4xl mx-auto">
      <Title>
        We build <GradiantText>Essential Features</GradiantText> for Modern IT Products
      </Title>
      <p class="mt-2 text-sm md:text-base text-gray-600">
        From architecture to operations—Protize ships durable systems with
        measurable outcomes.
      </p>
    </div>

    <div class="flex flex-row flex-wrap mt-8">
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
    </div>
  </Container>
</section>
