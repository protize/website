---
// src/components/badges/TeamImpactBadge.astro
import shell from "../../assets/logos/shell.avif";
import aubay from "../../assets/logos/aubay.avif";
import midori from "../../assets/logos/midori-investment.avif";
import ways101 from "../../assets/logos/101-ways.avif";
import zoopla from "../../assets/logos/zoopla.avif";
import credenc from "../../assets/logos/credenc.avif";
import logizip from "../../assets/logos/logizip.avif";
import bloomberg from "../../assets/logos/broomberg.avif";
import truckadium from "../../assets/logos/truckadium.avif";
import investorsclinic from "../../assets/logos/investors-clinic.avif";
import Paragraph from "../shared/Paragraph.astro";

type LogoItem = {
  src: string;
  alt: string;
  name: string;
};

export interface Props {
  className?: string;
  title?: string;
  subtitle?: string;
  logos?: LogoItem[];
}

const {
  className = "",
  title = "Building reliable digital products for ambitious brands.",
  subtitle = "Delivered with trust by a team experienced across 10+ companies.",
  logos = [
    { src: shell.src, alt: "Shell", name: "Shell" },
    { src: aubay.src, alt: "Aubay", name: "Aubay" },
    { src: midori.src, alt: "Midori Investments", name: "Midori Investments" },
    { src: ways101.src, alt: "101 Ways", name: "101 Ways" },
    { src: zoopla.src, alt: "Zoopla", name: "Zoopla" },
    { src: credenc.src, alt: "Credenc", name: "Credenc" },
    { src: logizip.src, alt: "Logizip", name: "Logizip" },
    { src: bloomberg.src, alt: "Broomberg", name: "Broomberg" },
    { src: truckadium.src, alt: "Truckadium", name: "Truckadium" },
    {
      src: investorsclinic.src,
      alt: "Investors Clinic",
      name: "Investors Clinic",
    },
  ],
} = Astro.props as Props;
---

<section
  class={`bg-[#FEFFFE] py-12 md:py-16 ${className}`}
  aria-label="Team impact"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-5xl text-center space-y-2">
      <h2
        class="text-3xl md:text-5xl font-extrabold tracking-tight text-purple-700 leading-tight whitespace-pre-line"
      >
        {title}
      </h2>

      <Paragraph>{subtitle}</Paragraph>
    </div>

    <ul
      class="mt-10 md:mt-14 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-6 md:gap-8 items-start"
      role="list"
      aria-label="Partner company logos"
    >
      {
        logos.map((logo) => (
          <li class="flex items-center justify-center">
            <div class="group w-full max-w-[190px] rounded-xl flex flex-col items-center justify-start text-center">
              <div class="aspect-[4/3] w-full flex items-center justify-center">
                <img
                  src={logo.src}
                  alt={logo.alt}
                  loading="lazy"
                  decoding="async"
                  class="max-h-24 md:max-h-28 w-auto max-w-full rounded-xl object-contain transition duration-300 group-hover:scale-[1.03]"
                />
              </div>

              <p class="mt-2 text-sm md:text-[15px] font-semibold text-neutral-700">
                {logo.name}
              </p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
