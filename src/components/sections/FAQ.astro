---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import GradiantText from "../shared/GradiantText.astro";
import { faqs } from "../../data/faqs";

type FAQProps = {
  question: string;
  answer: string;
};

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section id="faq" class={`relative ${className}`}>
  <Container>
    <!-- Header -->
    <div class="faq-head text-center max-w-3xl mx-auto">
      <Title>
        Frequently Asked <GradiantText>Questions</GradiantText>
      </Title>
      <p class="mt-2 text-sm md:text-base text-gray-600">
        Everything you need to know about working with Protize.
      </p>
    </div>

    <!-- FAQ Accordion -->
    <div
      id="faq-list"
      class="grid max-w-3xl mx-auto mt-8 overflow-hidden rounded-3xl border border-gray-200 bg-white shadow-md divide-y divide-gray-100"
    >
      {
        faqs.map((faq: FAQProps, idx: number) => (
          <div
            class="faq-row py-5 px-6 hover:bg-gray-50 transition-colors duration-200"
            style={`--delay:${idx * 80}ms`}
          >
            <details class="group faq-item">
              <summary class="flex justify-between items-center font-medium cursor-pointer list-none text-gray-900">
                <span class="text-base md:text-lg">{faq.question}</span>
                <span class="transition-transform duration-300 group-open:rotate-180 text-gray-500">
                  <svg
                    fill="none"
                    height="22"
                    width="22"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="1.75"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    aria-hidden="true"
                  >
                    <path d="M6 9l6 6 6-6" />
                  </svg>
                </span>
              </summary>

              <div class="overflow-hidden transition-all duration-500 ease-in-out group-open:mt-3 group-open:max-h-96 group-open:opacity-100 max-h-0 opacity-0">
                <p class="text-gray-700 text-sm md:text-base leading-relaxed">
                  {faq.answer}
                </p>
              </div>
            </details>
          </div>
        ))
      }
    </div>
  </Container>

  <!-- Scripts -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Single-open accordion behavior
      const items = document.querySelectorAll(".faq-item");
      items.forEach((el) => {
        el.addEventListener("toggle", () => {
          if (el) {
            items.forEach((other) => {
              if (other !== el) other.removeAttribute("open");
            });
          }
        });
      });

      // Reveal on scroll
      const section = document.getElementById("faq");
      if (!section) return;

      const prefersReducedMotion = window.matchMedia(
        "(prefers-reduced-motion: reduce)",
      ).matches;

      if (prefersReducedMotion) {
        section.classList.add("faq-visible");
        return;
      }

      const observer = new IntersectionObserver(
        ([entry], obs) => {
          if (entry.isIntersecting) {
            section.classList.add("faq-visible");
            obs.disconnect();
          }
        },
        { threshold: 0.2, rootMargin: "0px 0px -8% 0px" },
      );

      observer.observe(section);
    });
  </script>

  <style>
    #faq .faq-head,
    #faq .faq-row {
      opacity: 0;
      will-change: transform, opacity;
    }

    #faq .faq-head {
      transform: translateY(16px);
    }

    #faq .faq-row {
      transform: translateY(14px);
    }

    #faq.faq-visible .faq-head {
      animation: faqFadeUp 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }

    #faq.faq-visible .faq-row {
      animation: faqFadeUp 0.55s cubic-bezier(0.22, 1, 0.36, 1) forwards;
      animation-delay: var(--delay);
    }

    @keyframes faqFadeUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (prefers-reduced-motion: reduce) {
      #faq .faq-head,
      #faq .faq-row {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
      }
    }
  </style>
</section>
