---
import { Image } from "astro:assets";
import Button from "../../shared/Button.astro";
import Container from "../../shared/Container.astro";
import CtaButton from "../../shared/CtaButton.astro";
import GradiantText from "../../shared/GradiantText.astro";
---

<section class="portfolio-hero relative isolate overflow-hidden">
  <Container className="relative py-10">
    <div class="grid items-center gap-4 lg:grid-cols-2 lg:gap-12">
      <!-- LEFT -->
      <div class="hero-copy max-w-2xl">
        <h1
          class="hero-title mt-4 text-3xl sm:text-4xl md:text-5xl lg:text-[50px] font-bold leading-[1.1] tracking-tight text-slate-900"
        >
          We Build
          <GradiantText>High-Impact Digital Products</GradiantText>
          That Scale with Confidence.
        </h1>

        <p
          class="hero-desc mt-4 md:mt-5 text-sm sm:text-base md:text-lg text-slate-700 leading-relaxed"
        >
          From web and mobile apps to fintech-grade systems, we deliver secure,
          reliable, and business-focused solutions with measurable outcomes.
        </p>

        <div class="hero-cta mt-7 flex flex-wrap gap-3">
          <a
            href="/contact-us"
            aria-label="Start your project with Protize"
            class="cta-lift"
          >
            <CtaButton>Start Your Project</CtaButton>
          </a>
          <a
            href="/services"
            aria-label="Explore Protize services"
            class="cta-lift"
          >
            <Button variant="secondary">Explore Services</Button>
          </a>
        </div>

        <!-- compact trust row -->
        <div
          class="hero-trust mt-7 flex flex-wrap items-center gap-x-5 gap-y-2 text-xs sm:text-sm text-slate-900"
        >
          <span class="trust-item">✓ Fast Delivery</span>
          <span class="trust-item">✓ Clean Architecture</span>
          <span class="trust-item">✓ Ongoing Support</span>
        </div>
      </div>

      <!-- RIGHT -->
      <div class="hero-visual relative">
        <div class="relative overflow-hidden rounded-3xl">
          <Image
            src="/images/ppp.png"
            alt="Protize portfolio hero"
            width={1400}
            height={980}
            loading="eager"
            class="hero-image h-[50%] w-full rounded-2xl object-cover"
          />
        </div>

        <!-- floating mini card -->
        <div
          class="hero-chip absolute -bottom-4 -left-4 md:-left-6 rounded-xl border border-white/70 bg-white/90 px-4 py-3 shadow-lg backdrop-blur"
        >
          <p class="text-[11px] uppercase tracking-wide text-slate-500">
            Recent Result
          </p>
          <p class="mt-0.5 text-sm md:text-base font-semibold text-slate-900">
            +95% faster release cycle
          </p>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  /* ===== initial states ===== */
  .hero-badge,
  .hero-title,
  .hero-desc,
  .hero-cta,
  .hero-trust,
  .hero-visual,
  .hero-chip {
    opacity: 0;
    will-change: transform, opacity;
  }

  .hero-badge {
    transform: translateY(10px);
    animation: fadeUp 0.55s cubic-bezier(0.22, 1, 0.36, 1) 0.02s forwards;
  }

  .hero-title {
    transform: translateY(16px);
    animation: fadeUp 0.75s cubic-bezier(0.22, 1, 0.36, 1) 0.1s forwards;
  }

  .hero-desc {
    transform: translateY(14px);
    animation: fadeUp 0.7s cubic-bezier(0.22, 1, 0.36, 1) 0.24s forwards;
  }

  .hero-cta {
    transform: translateY(12px);
    animation: fadeUp 0.65s cubic-bezier(0.22, 1, 0.36, 1) 0.34s forwards;
  }

  .hero-trust {
    transform: translateY(10px);
    animation: fadeUp 0.65s cubic-bezier(0.22, 1, 0.36, 1) 0.44s forwards;
  }

  .hero-visual {
    transform: translateX(18px) scale(0.985);
    animation: visualIn 0.95s cubic-bezier(0.22, 1, 0.36, 1) 0.2s forwards;
  }

  .hero-chip {
    transform: translateY(10px) scale(0.98);
    animation: chipIn 0.7s cubic-bezier(0.22, 1, 0.36, 1) 0.6s forwards;
  }

  .hero-image {
    animation: floatY 4s ease-in-out 1.1s infinite;
    transition:
      transform 0.45s ease,
      filter 0.45s ease;
  }

  .hero-visual:hover .hero-image {
    transform: scale(1.02);
    filter: saturate(1.04);
  }

  .cta-lift {
    transition: transform 0.25s ease;
  }

  .cta-lift:hover {
    transform: translateY(-2px);
  }

  .trust-item {
    position: relative;
    padding-left: 2px;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes visualIn {
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  @keyframes chipIn {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes floatY {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  @media (max-width: 767px) {
    .hero-chip {
      left: 10px;
      bottom: 10px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-badge,
    .hero-title,
    .hero-desc,
    .hero-cta,
    .hero-trust,
    .hero-visual,
    .hero-chip,
    .hero-image {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }

    .hero-image,
    .cta-lift {
      transition: none !important;
    }
  }
</style>
