---
import FadeIn from "../animations/FadeIn";
import {
  PartyPopper,
  Trophy,
  Users,
  Award,
  Globe,
  Sparkles,
} from "lucide-react";

const MILESTONES = [
  {
    year: "2011",
    title: "Protize Founded",
    description:
      "Protize started as a small, engineering-first team focused on building reliable and scalable software solutions for growing businesses.",
    icon: PartyPopper,
  },
  {
    year: "2013",
    title: "Early Client Deliveries",
    description:
      "Successfully delivered our first client projects and built trust through consistent execution, clean code, and transparent communication.",
    icon: Trophy,
  },
  {
    year: "2016",
    title: "Stronger Delivery Process",
    description:
      "Standardized project execution with milestone-based delivery, better QA practices, and documentation-first workflows.",
    icon: Award,
  },
  {
    year: "2019",
    title: "Service Expansion",
    description:
      "Expanded capabilities across frontend, backend, and cloudâ€”helping clients build complete digital products end-to-end.",
    icon: Users,
  },
  {
    year: "2022",
    title: "Cloud & Reliability Focus",
    description:
      "Improved system performance and uptime through modern cloud architecture, deployment automation, and production monitoring.",
    icon: Globe,
  },
  {
    year: "2025",
    title: "28+ Projects Delivered",
    description:
      "Reached 28+ delivered projects with a strong focus on quality, long-term client relationships, and measurable business impact.",
    icon: Sparkles,
  },
];
---

<section class="section-padding">
  <div class="container-custom">
    <FadeIn client:load direction="up">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          Our <span class="gradient-text">Journey</span>
        </h2>
        <p class="text-xl text-gray-600">Key milestones that shaped Protize</p>
      </div>

      <div class="max-w-4xl mx-auto">
        {
          MILESTONES.map((milestone) => {
            const Icon = milestone.icon;

            return (
              <div class="flex gap-4 md:gap-8 mb-12 group">
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 md:w-20 md:h-20 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform">
                    <Icon className="w-9 h-9 text-white" />
                  </div>
                </div>

                <div class="flex-grow">
                  <div class="flex items-center gap-4 mb-2">
                    <span class="text-3xl font-bold gradient-text">
                      {milestone.year}
                    </span>
                    <div class="flex-grow h-px bg-gradient-to-r from-primary/50 to-transparent" />
                  </div>

                  <h3 class="text-2xl font-heading font-bold mb-2 text-navy group-hover:text-primary transition-colors">
                    {milestone.title}
                  </h3>
                  <p class="text-gray-700 leading-relaxed">
                    {milestone.description}
                  </p>
                </div>
              </div>
            );
          })
        }
      </div>
    </FadeIn>
  </div>
</section>
