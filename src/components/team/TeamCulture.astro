---
import FadeIn from "../animations/FadeIn";
import {
  Sparkles,
  Laptop,
  BookOpenCheck,
  HeartPulse,
  PartyPopper,
  BadgeIndianRupee,
  TrendingUp,
} from "lucide-react";

const BENEFITS = [
  { icon: Laptop, text: "Remote-first culture with flexible hours" },
  {
    icon: BookOpenCheck,
    text: "Continuous learning and certification programs",
  },
  { icon: HeartPulse, text: "Comprehensive health and wellness benefits" },
  { icon: PartyPopper, text: "Regular team events and celebrations" },
  { icon: BadgeIndianRupee, text: "Competitive compensation and bonuses" },
  { icon: TrendingUp, text: "Career growth and advancement opportunities" },
];

const IMAGES = [
  "/images/team-img/team1.jpg",
  "/images/team-img/team2.jpg",
  "/images/team-img/team3.jpg",
  "/images/team-img/team4.jpg",
];
---

<section class="section-padding">
  <div class="container-custom">
    <FadeIn client:load direction="up">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        {/* Left */}
        <div>
          <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
            Life at Protize
          </h2>
          <p class="text-xl mb-6 opacity-90 leading-relaxed">
            We believe that happy employees create exceptional work. That's why
            we've built a culture that values work-life balance, continuous
            learning, and innovation.
          </p>

          <div class="mt-8 grid sm:grid-cols-2 gap-4">
            {
              BENEFITS.map((b) => {
                const Icon = b.icon;
                return (
                  <div class="flex items-start gap-3 rounded-2xl border border-gray-200 bg-white p-4">
                    <div class="mt-0.5 inline-flex h-10 w-10 min-w-10 items-center justify-center rounded-xl bg-primary/10 text-primary">
                      <Icon className="h-5 w-5" />
                    </div>
                    <div class="text-gray-800 font-semibold leading-snug">
                      {b.text}
                    </div>
                  </div>
                );
              })
            }
          </div>
        </div>

        {/* Right */}
        <div class="grid grid-cols-2 gap-4">
          {
            IMAGES.map((src) => (
              <div class="group overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
                <div class="aspect-[4/3] overflow-hidden">
                  <img
                    src={src}
                    alt="Team at Protize"
                    loading="lazy"
                    class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                  />
                </div>
                <div class="p-3">
                  <div class="h-2 w-20 rounded-full bg-gradient-to-r from-primary to-accent opacity-70" />
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </FadeIn>
  </div>
</section>
