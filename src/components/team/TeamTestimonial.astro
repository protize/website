---
import FadeIn from "../animations/FadeIn";

const testimonials = [
  {
    name: "Karan Bohra",
    position: "Lead Software Engineer",
    image: "/images/team-img/karan.png",
    quote:
      "The collaborative environment at Protize is unlike anywhere I've worked before. Everyone is genuinely invested in each other's success and the projects we deliver.",
    rating: 5,
  },
  {
    name: "Jayshrilal Pandit",
    position: "Software Developer",
    image: "/images/team-img/jay.png",
    quote:
      "I've grown so much professionally here. The continuous learning opportunities and mentorship programs have accelerated my career beyond my expectations.",
    rating: 5,
  },
  {
    name: "Jatin Jayal",
    position: "Software Engineer",
    image: "/images/team-img/jatin.png",
    quote:
      "Protize has given me the opportunity to work on cutting-edge projects while maintaining a healthy work-life balance. The team is supportive and the culture is amazing.",
    rating: 5,
  },
];
---

<section class="section-padding bg-gradient-to-br from-primary/5 to-accent/5">
  <div class="container-custom">
    <FadeIn client:load direction="up">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          What Our Team <span class="gradient-text">Says</span>
        </h2>
        <p class="text-xl text-gray-600">
          Hear directly from our team members about their experience at Protize
        </p>
      </div>

      <div id="testimonials-carousel" class="relative">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            testimonials.map((testimonial, index) => (
              <div class="card bg-white h-full flex flex-col">
                {/* Stars */}
                <div class="flex mb-4">
                  {Array.from({ length: testimonial.rating }).map(() => (
                    <svg
                      class="w-5 h-5 text-yellow-400"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>

                {/* Quote */}
                <blockquote class="text-gray-700 mb-6 leading-relaxed flex-grow italic">
                  "{testimonial.quote}"
                </blockquote>

                {/* Client Info */}
                <div class="flex items-center pt-6 border-t border-gray-200">
                  <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold mr-4 flex-shrink-0">
                    {testimonial.image ? (
                      <img
                        src={testimonial.image}
                        alt={testimonial.name}
                        class="w-12 h-12 rounded-full object-cover"
                        loading="lazy"
                        decoding="async"
                      />
                    ) : (
                      <span>
                        {testimonial.name
                          .split(" ")
                          .filter(Boolean)
                          .map((n) => n[0]?.toUpperCase())
                          .join("")}
                      </span>
                    )}
                  </div>

                  <div>
                    <div class="font-semibold text-navy">
                      {testimonial.name}
                    </div>
                    <div class="text-sm text-gray-600">
                      {testimonial.position}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </FadeIn>
  </div>
</section>
