---
import CountUp from "../animations/CountUp";
import FadeIn from "../animations/FadeIn";

const stats = [
  { value: 50, suffix: "+", label: "Team Members" },
  { value: 15, suffix: "+", label: "Countries" },
  { value: 20, suffix: "+", label: "Specializations" },
  { value: 100, suffix: "%", label: "Certified Experts" },
];
---

<section class="section-padding bg-white">
  <div class="container-custom">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      {
        stats.map((stat) => {
          return (
            <FadeIn client:load direction="up">
              <div class="text-center p-6">
                <div class="flex justify-center mb-4" />

                <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">
                  <CountUp client:load to={stat.value} suffix={stat.suffix} />
                </div>

                <p class="text-gray-600 font-medium">{stat.label}</p>
              </div>
            </FadeIn>
          );
        })
      }
    </div>
  </div>
</section>
