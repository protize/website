<button
  id="scrollToTopBtn"
  class="fixed z-10 bottom-6 right-6 hidden rounded-full bg-purple-600 text-white p-3 shadow-lg hover:bg-purple-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-purple-400"
  aria-label="Scroll to top"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-5 w-5"
    viewBox="0 0 24 24"
    fill="currentColor"
  >
    <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
  </svg>
</button>

<script>
  const scrollBtn = document.getElementById("scrollToTopBtn");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 250) {
      scrollBtn.classList.remove("hidden");
      scrollBtn.classList.add("opacity-100");
    } else {
      scrollBtn.classList.add("hidden");
      scrollBtn.classList.remove("opacity-100");
    }
  });

  scrollBtn.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>
