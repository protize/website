<button
  id="scrollToTopBtn"
  class="fixed bottom-24 right-6 z-10 hidden rounded-full bg-blue-600 p-3 text-white shadow-lg transition-all duration-300 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 opacity-0"
  aria-label="Scroll to top"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-5 w-5"
    viewBox="0 0 24 24"
    fill="currentColor"
  >
    <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
  </svg>
</button>

<script>
  const scrollBtn = document.getElementById("scrollToTopBtn");

  if (scrollBtn) {
    const toggleBtn = () => {
      if (window.scrollY > 250) {
        scrollBtn.classList.remove("hidden", "opacity-0");
        scrollBtn.classList.add("opacity-100");
      } else {
        scrollBtn.classList.add("opacity-0");
        scrollBtn.classList.remove("opacity-100");
        window.setTimeout(() => scrollBtn.classList.add("hidden"), 300);
      }
    };

    window.addEventListener("scroll", toggleBtn, { passive: true });
    toggleBtn();

    scrollBtn.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }
</script>
